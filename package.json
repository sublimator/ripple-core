{
  "name": "ripple-core-types",
  "version": "0.0.1",
  "description": "ripple core types (json <-> binary)",
  "files": [
    "distrib/npm/*",
    "bin/*",
    "test/*"
  ],
  "main": "distrib/npm/",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "babel-runtime": "^5.8.20",
    "bn.js": "^3.1.1",
    "codecov.io": "^0.1.6",
    "decimal.js": "^4.0.2",
    "hash.js": "^1.0.3",
    "lodash": "^3.10.1",
    "ripple-address-codec": "^2.0.0"
  },
  "devDependencies": {
    "assert-diff": "^1.0.1",
    "babel": "^5.8.20",
    "babel-eslint": "^4.0.5",
    "eslint": "^1.2.1",
    "eslint-watch": "^2.0.0",
    "istanbul": "~0.3.5",
    "mocha": "~2.2.5",
    "ripple-lib": "^0.12.4",
    "sequelize": "^3.6.0",
    "sqlite3": "^3.0.10",
    "yargs": "^3.21.0",
    "ripple-keypairs": "^0.8.0"
  },
  "scripts": {
    "compile": "babel --optional runtime -d distrib/npm/ src/",
    "prepublish": "npm test && npm run lint && npm run compile",
    "test": "istanbul test _mocha",
    "codecov": "cat ./coverage/coverage.json | ./node_modules/codecov.io/bin/codecov.io.js",
    "lint": "if ! [ -f eslintrc ]; then curl -o eslintrc 'https://raw.githubusercontent.com/ripple/javascript-style-guide/es6/eslintrc'; echo 'parser: babel-eslint' >> eslintrc; fi; eslint -c eslintrc src/*.js test/*.js examples/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sublimator/ripple-core-types.git"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "bugs": {
    "url": "https://github.com/sublimator/ripple-core-types/issues"
  },
  "homepage": "https://github.com/sublimator/ripple-core-types#readme",
  "author": "ndudfield@gmail.com",
  "license": "ISC",
  "readmeFilename": "README.md"
}

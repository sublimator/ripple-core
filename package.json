{
  "name": "ripple-core-types",
  "version": "0.0.1",
  "description": "ripple core types (json <-> binary)",
  "files": [
    "distrib/npm/*",
    "bin/*",
    "build/*",
    "test/*",
    "Gulpfile.js"
  ],
  "main": "distrib/npm/",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "babel-runtime": "^5.8.20",
    "bn.js": "^3.1.1",
    "codecov.io": "^0.1.6",
    "decimal.js": "^4.0.2",
    "hash.js": "^1.0.3",
    "lodash": "^3.10.1",
    "ripple-address-codec": "^1.6.0"
  },
  "devDependencies": {
    "assert-diff": "^1.0.1",
    "babel": "^5.8.20",
    "babel-core": "^5.8.20",
    "babel-eslint": "^4.0.5",
    "babel-loader": "^5.3.2",
    "eslint": "^1.2.1",
    "eslint-watch": "^2.0.0",
    "eventemitter2": "^0.4.14",
    "istanbul": "~0.3.5",
    "lodash": "^3.10.0",
    "map-stream": "~0.1.0",
    "mocha": "~2.1.0",
    "nock": "^0.34.1",
    "ripple-lib": "^0.12.4",
    "webpack": "~1.5.3",
    "yargs": "~1.3.1"
  },
  "scripts": {
    "build": "gulp",
    "compile": "babel --optional runtime -d distrib/npm/ src/",
    "compile-with-source-maps": "babel --optional runtime -s -t -d distrib/npm/ src/",
    "prepublish": "npm test && npm run lint && npm run compile",
    "test": "istanbul test _mocha",
    "codecov": "cat ./coverage/coverage.json | ./node_modules/codecov.io/bin/codecov.io.js",
    "lint": "if ! [ -f eslintrc ]; then curl -o eslintrc 'https://raw.githubusercontent.com/ripple/javascript-style-guide/es6/eslintrc'; echo 'parser: babel-eslint' >> eslintrc; fi; eslint -c eslintrc src/*.js test/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sublimator/ripple-core-types.git"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "bugs": {
    "url": "https://github.com/sublimator/ripple-core-types/issues"
  },
  "homepage": "https://github.com/sublimator/ripple-core-types#readme",
  "author": "ndudfield@gmail.com",
  "license": "ISC",
  "readmeFilename": "README.md"
}
